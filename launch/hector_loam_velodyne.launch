<launch>

  <arg name="rviz" default="true" />

  <node pkg="loam_wgb" type="scanRegistration" name="scanRegistration" output="screen">
      <remap from="/velodyne_points" to="/velodyne_points" />
      <remap from="/imu/data" to="/raw_imu" />  
      <!-- <remap from="/imu/data" to="/djiros/imu" />   -->
  </node>

  <node pkg="loam_wgb" type="laserOdometry" name="laserOdometry" output="screen" respawn="true"/>



  <node pkg="loam_wgb" type="laserMapping" name="laserMapping" output="screen"/>
  <node pkg="loam_wgb" type="transformMaintenance" name="transformMaintenance" output="screen"/>

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find loam_wgb)/rviz_cfg/loam_velodyne.rviz" />
  </group>

</launch>
